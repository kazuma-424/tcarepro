	  <%= form_for @customer do |f| %>
<table width = "90%">
      <col width="20%">
      <col width="30%">
      <col width="20%">
      <col width="30%">
	<tbody>
	  <tr>
        <th colspan = "4">検索</th>
      </tr>
	  <tr>
	    <th>会社名</th>
		<td><%=text_field :customer, :company %> </td>
		<th>店舗名</th>
		<td><%=text_field :customer, :store %> </td>
	  </tr>
	  <tr>
		 <th>代表者</th>
		 <td><%=text_field :customer, :first_name %></td>
		 <th>ダイヒョウ</th>
		 <td><%=text_field :customer, :first_kana %></td>
	  </tr>
	  <tr>
		 <th>電話番号1</th>
		 <td><%=telephone_field :customer, :tel %></td>
		 <th>電話番号2</th>
		 <td><%=telephone_field :customer, :tel2 %></td>
	  </tr>
	  <tr>
		 <th>FAX番号2</th>
		 <td><%=telephone_field :customer, :fax %></td>
		 <th>業種</th>
		 <td><%=text_field :customer, :industry %></td>
	  </tr>
	  <tr>
		 <th>メール</th>
		 <td><%=text_field :customer, :mail %></td>
		 <th>URL</th>
		 <td><%=text_field :customer, :url %></td>
	  </tr>
	  <tr>
		  <th>人数</th>
		  <td><%=number_field :customer, :people %></td>
		  <th>住所</th>
		  <td><%=text_field :customer, :address %></td>
		</tr>
		<tr>
		  <th>メモ</th>
		  <td><%=text_field :customer, :remarks %></td>
			<th>顧客ステータス</th>
			<td><%= f.select(:status, [
				["call","call"],
				["prospect","prospect"],
				["crm","crm"]
				]) %></td>
		</tr>
		<tr>
		  <th>メモ１</th>
		  <td><%=text_field :customer, :memo_1 %></td>
			<th>メモ２</th>
		  <td><%=text_field :customer, :memo_2 %></td>
		</tr>
		<tr>
		  <th>メモ３</th>
		  <td><%=text_field :customer, :memo_3 %></td>
			<th></th>
		  <td></td>
		</tr>
		<tr>
			<th colspan ="4"><%=f.submit%></th>
	   </tr>
	</tbody>
 </table>
	    <%end%>
