- set_meta_tags noindex: true
.tops-wrapper
  h2.headline
    | 請求書詳細
  table.space[width="90%"]
    tbody
      tr
        th
          | 会社名
        td
          =@estimate.customer.company
        th
          | 代表者名
        td
          =@estimate.customer.first_name
      tr
        th
          | 郵便番号
        td
          =@estimate.customer.postnumber
        th
          | 電話番号
        td
          =@estimate.customer.tel
      tr
        th
          | 住所
        td[colspan="3"]
          =@estimate.customer.address
  br
  table.space[width="90%"]
    tbody
      tr
        th
          | ステータス
        td
          =@estimate.status
        th
          | 期限
        td
          = @estimate.deadline
      tr
        th
          | 入金日
        td
          = @estimate.payment
        th
          | 件名
        td
          = @estimate.subject
  table.space[width="90%"]
    tbody
      tr
        th
          | 商品名
        th
          | 販売価格
        th
          | 数量
        th
          | 合計
      tr
        th
          = @estimate.item1
        td
          = @estimate.price1
        |  　
        td
          = @estimate.quantity1
        td
          =@estimate.calc1
        |  　
      tr
        th
          = @estimate.item2
        td
