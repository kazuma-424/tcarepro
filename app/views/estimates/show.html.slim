        td
          =@estimate.calc2
        |  　
      tr
        th
          = @estimate.item3
        td
          = @estimate.price3
        |  　
        td
          = @estimate.quantity3
        td
          =@estimate.calc3
        |  　
      tr
        th
          = @estimate.item4
        td
          = @estimate.price4
        |  　
        td
          = @estimate.quantity4
        td
          =@estimate.calc4
        |  　
      tr
        th
          = @estimate.item5
        td
          = @estimate.price5
        |  　
        td
          = @estimate.quantity5
        td
          =@estimate.calc5
        |  　
      tr
        td[colspan="2"]
        th
          | 小計
        td
          =@estimate.summary
        |  　
      tr
        td[colspan="2"]
        th
          | 消費税
        td
