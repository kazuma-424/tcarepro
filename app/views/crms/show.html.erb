    <% @crm.comments.each do |comment| %>
    <tr>
      <th width="90%"><%= comment.body %></th>
      <td width="10%"><%= link_to '削除',
                      crm_comment_path(crm_id: @crm.id, id: comment.id),
                      method: :delete,
                      data: { confirm: '本当に削除しますか？'} %></td>
     </tr>
    <% end %>
   <% end %>
   <%= form_for ([@crm, @crm.comments.build]) do |f| %>
