<div class="beige-wrapper">

          <div class="heading"><h2>管理者ログイン</h2></div>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<table class="worker_table">
            <colgroup>
                <col width="40%">
                <col width="60%">
          　 </colgroup>
          <tr>
        <th>ログインアドレス<span class="label label-blue">必須</span></br>
                <small>aaa@crold-valieat.jp</small></th>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
          <tr>
        <th>パスワード<span class="label label-blue">必須</span></br>
                <small>*******</small></th>
        <td><%= f.password_field :password, autocomplete: "off" %></td>
      </tr>
      <tr>
        <td colspan="2">
                <% if devise_mapping.rememberable? -%>
                                   <%= f.check_box :remember_me %>
                                  <%= f.label :remember_me %>
                          <% end -%>
        </td>
      </tr>

      <tr>
                <th colspan="2">  <%= f.submit "ログイン" %></th>
      </tr>
</table>
<% end %>
<div class="center">
<%= render "users/shared/links" %>
</div>

</div>
