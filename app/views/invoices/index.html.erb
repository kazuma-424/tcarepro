<div class="beige-wrapper">
 
   
            <div class="heading"><h2>請求書一覧</h2>
            <p>Invoice List    <%= link_to '(New regstration)', '/invoices/new' %></p></div>
            
            
      <table width="90%">
     	<tbody>
      		<tr>
        			<th>会社名</th>
        			<th>代表者</th>
        			<th>ステータス</th>
        			<th>発行日</th>
        			<th>入金日</th>
        			<th>請求額</th>
        			<th>編集/削除</th>
　  		</tr>
      		<tr>
      				<% @invoices.each do |invoice|%>
        	<td><%= link_to invoice.company.company, invoice_path(invoice)  %></td>
        	<td><%= link_to invoice.company.first_name, invoice_path(invoice)  %></td>
        	<td><%= invoice.status%></td>
        	<td><%= invoice.created_at%></td>
        	<td><%= invoice.payment%></td>
        	<td></td>
        	<td><%= link_to '編集', edit_invoice_path(invoice), class: 'command'%>
			            ｜ <%= link_to '削除', 
			            	invoice_path(invoice), 
			            	method: :delete, 
			            	class: 'command',
			            	data: { confirm: '本当に削除しますか？'} %>
			            ｜<%= link_to 'pdf', report_invoice_path(invoice, format: 'pdf') %>
			            	</td>

      		</tr>
      							<% end %>
        </tbody>
     </table> 
     

            

</div>