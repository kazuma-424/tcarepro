<%= form_for ([@crm, @crm.invoices.build]) do |f|%>

<table width = "90%" >
	<tbody>
	  <tr>
			  <th>件名</th>
        <td><%= f.text_field :subject %></td>
				<th>ステータス</th>
				<td><%= f.select(:status,[
               ["入金前","入金前"],
               ["入金済","入金済"],
                ]) %>
        </td>
      </tr>
      <tr>
        <th>入金日</th>
        <td><%= f.date_field :payment %></td>
        <th>期限</th>
        <td><%= f.date_field :deadline %></td>
      </tr>
	</tbody>
</table>

<table width = "90%" >
	<tbody>
      <tr>
        <th>商品名</th>
        <th>販売価格</th>
        <th>数量</th>
        <th>合計</th>
     </tr>
     <tr>
        <td><%= f.text_field :item1, :value=>0 %></td>
        <td><%= f.number_field :price1, :value=>0 %></td>
　    <td><%= f.number_field :quantity1, :value=>0 %></td>
        <td>#item+price+quantity1</td>
　  </tr>
     <tr>
        <td><%= f.text_field :item2, :value=>0 %></td>
        <td><%= f.number_field :price2, :value=>0 %></td>
　    <td><%= f.number_field :quantity2, :value=>0 %></td>
        <td>#item+price+quantity2</td>
　  </tr>
     <tr>
        <td><%= f.text_field :item3, :value=>0 %></td>
        <td><%= f.number_field :price3, :value=>0 %></td>
　    <td><%= f.number_field :quantity3, :value=>0 %></td>
        <td>#item+price+quantity3</td>
　  </tr>
     <tr>
        <td><%= f.text_field :item4, :value=>0 %></td>
        <td><%= f.number_field :price4, :value=>0 %></td>
　    <td><%= f.number_field :quantity4, :value=>0 %></td>
        <td>#item+price+quantity4</td>
　  </tr>
    <tr>
        <td><%= f.text_field :item5, :value=>0 %></td>
        <td><%= f.number_field :price5, :value=>0 %></td>
　    <td><%= f.number_field :quantity5, :value=>0 %></td>
        <td>#item+price+quantity5</td>
　  </tr>
    <tr>
        <td colspan="4"><%= f.submit '登録', data: { confirm: '登録しますか？'}%></td>
　  </tr>
	</tbody>
</table>

<%end%>
