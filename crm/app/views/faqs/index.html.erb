    <div id="todos-center">
        <div class="heading">
            <h2>新規FAQ登録</h2>
            <p>
                <%= form_for @faq do |f|%>
                    <%= f.text_field :title %>
                    <%= f.submit '登録', data: { confirm: '登録しますか？'}%>
                <%end%>
            </p>
        </div>

        <ul>
            <% @faqs.each do |faq|%>
            <li class="box"><%= faq.title  %>
                                    <%= link_to '削除', 
			            	            faq_path(faq), 
			            	            method: :delete, 
			            	            class: 'command',
			            	            data: { confirm: '本当に削除しますか？'} %></li>
            <% end %>
        </ul>
   </div>

</div>

