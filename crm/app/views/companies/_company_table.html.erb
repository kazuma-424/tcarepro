      <td id="town-show" class="td-show"><%= company.town%></td>
      <td id="town-c-input-field" class="none c-input-field"><%= f.text_field :town, :value => company.town, :id=> "town-form-field", :class=>"c-input-field" %></td>
      <td class="edit-link-show" data-v="town">編集</td>
