      <td class="edit-link-show" data-v="postnumber">編集</td>
    </tr>
    <tr>
      <th>都道府県</th>
      <td id="prefecture-show" class="td-show"><%= company.prefecture%></td>
      <td id="prefecture-c-input-field" class="none c-input-field"><%= f.text_field :prefecture, :value => company.prefecture, :id=> "prefecture-form-field", :class=>"c-input-field" %></td>
