      <td id="mobile-show" class="td-show"><%= company.mobile %></td>
      <td id="mobile-c-input-field" class="none c-input-field"><%= f.text_field :mobile, :value => company.mobile, :id=> "mobile-form-field", :class=>"c-input-field" %></td>
      <td class="edit-link-show" data-v="mobile">編集</td>
