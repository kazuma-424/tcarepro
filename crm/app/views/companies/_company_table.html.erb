      <td id="first_name-c-input-field" class="none c-input-field"><%= f.text_field :first_name, :value => company.first_name, :id=> "first_name-form-field", :class=>"c-input-field" %></td>
      <td class="edit-link-show" data-v="first_name">編集</td>
      <th>名</th>
      <td id="last_name-show" class="td-show"><%= company.last_name%></td>
