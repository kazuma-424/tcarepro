      <td id="caption-show" class="td-show"><%= company.caption%>万円</td>
      <td id="caption-c-input-field" class="none c-input-field"><%= f.text_field :caption, :value => company.caption, :id=> "caption-form-field", :class=>"c-input-field" %></td>
      <td class="edit-link-show" data-v="caption">編集</td>
    </tr>
    <tr>
      <th>労働保険番号</th>
      <td id="labor_number-show" class="td-show"><%= company.labor_number%></td>
      <td id="labor_number-c-input-field" class="none c-input-field"><%= f.text_field :labor_number, :value => company.labor_number, :id=> "labor_number-form-field", :class=>"c-input-field" %></td>
