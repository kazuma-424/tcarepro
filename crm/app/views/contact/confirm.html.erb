  <div class="sub-wrapper">
  
            <div class="heading"><h2>内容のご確認</h2>
            <p>Confirmation</p></div>
            

<%= form_for @contact, :url => contact_thanks_path do |f| %>
  <table>
          			<colgroup>
            			<col width="40%">
            			<col width="60%">
       			　 </colgroup>
    <tr>
      <th>名前</th>
      <td>
        <%= f.hidden_field :name %>
        <%= @contact.name %>
      </td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td>
        <%= f.hidden_field :email %>
        <%= @contact.email %>
      </td>
    </tr>
    <tr>
      <th>お問い合わせ内容</th>
      <td>
        <%= f.hidden_field :message %>
        <%= simple_format(@contact.message) %>
      </td>
    </tr>
  </table>
 <%= f.submit '送信' %>
<% end %>

</div>